<body>
<h1>Liste des Classrooms</h1>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Update</th>
        <td>Delete</td>
    </tr>
    <tr {% for c in classroom%}>
        <td>{{ c.id }}</td>
        <td>{{ c.name }}</td>
        <td><a href="{{ path('update',{'id':c.id}) }}">Update</a></td>
        <td><a href="{{ path('d',{'id':c.id}) }}">Delete</a></td>
    </tr {% endfor %}>
</table>
</body>
